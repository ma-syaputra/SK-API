                        }
                    },
                    "404": {
                        "description": "Failed. Dishes not found."
                    }
                }
            },
            "put": {
                "summary": "Update dishes with given ID",
                "tags": [
                    "Dishes"
                ],
                "requestBody": {
                    "description": "Dishes Object",
